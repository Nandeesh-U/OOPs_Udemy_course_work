<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 30
        Camera:
            id: camera
            resolution: (1280, 960)
            play: False
            size_hint_y: 0.9
            opacity: 0
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                id: camera_button
                text: 'Start Camera'
                on_press: root.start() if root.ids.camera.play==False else root.stop()
                background_normal: 'files/images/normal.png'
                background_down: 'files/images/down.png'
            Button:
                text: 'Capture'
                on_press: root.capture()
                background_normal: 'files/images/normal.png'
                background_down: 'files/images/down.png'

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 30
        Image:
            id: img
            size_hint_y: 0.8
        Button:
            text: 'Create Sharable Link'
            on_press: root.create_link()
            size_hint_y: 0.1
            background_normal: 'files/images/normal.png'
            background_down: 'files/images/down.png'
        Label:
            id: link
            text: ''
            size_hint_y: 0.06
        GridLayout:
            size_hint_y: 0.1
            cols: 2
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_normal: 'files/images/normal.png'
                background_down: 'files/images/down.png'
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_normal: 'files/images/normal.png'
                background_down: 'files/images/down.png'

<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.3, 0.2, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'